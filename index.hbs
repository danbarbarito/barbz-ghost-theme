{{!< default}}
{{!-- The tag above means: insert everything in this file
                                   into the {body} of the default.hbs template --}}

{{!-- The big featured header, it uses blog cover image as a BG if available --}}


<div class="video-background">
    <div class="video-foreground">
        <iframe src="https://www.youtube.com/embed/W0LHTWG-UmQ?controls=0&showinfo=0&rel=0&autoplay=1&loop=1&playlist=W0LHTWG-UmQ" frameborder="0" allowfullscreen></iframe>
    </div>
</div>

<section class="home-header">
    <div class="row">
        <div class="col-md-8 col-md-push-2">
            <div id="coverimg1" class="header-box is-large">
                <div class="header-box-content">
                    <div class="header-box-text">
                        <div class="site-header-content">
                            <h1 class="site-title">
                                {{#if @blog.logo}}
                                    <img class="site-logo" src="{{@blog.logo}}" alt="{{@blog.title}}" />
                                {{else}}
                                    {{@blog.title}}
                                {{/if}}
                            </h1>
                            <h2 class="site-description">{{@blog.description}}</h2>

                            {{> "social-links"}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xs-6 col-md-2 col-md-pull-8">
            <div class="col-xs-12">
                <a href="/about">
                    <div id="accent1" class="header-box is-small">
                        <div class="header-box-content">
                            <div class="header-box-text">
                                About
                            </div>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-xs-12">
                <a href="/blog">
                    <div id="accent2" class="header-box is-small">
                        <div class="header-box-content">
                            <div class="header-box-text">
                                Blog
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        </div>
        <div class="col-xs-6 col-md-2">
            <div class="col-xs-12">
                <a href="/resume">
                    <div id="accent3" class="header-box is-small">
                        <div class="header-box-content">
                            <div class="header-box-text">
                                Resume
                            </div>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-xs-12">
                <a href="/projects">
                    <div id="accent4" class="header-box is-small">
                        <div class="header-box-content">
                            <div class="header-box-text">
                                Projects
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </div>
    <div class="arrow animated bounce">
        <img width="40" height="40" alt="" src="data:image/svg+xml;base64," />
    </div>
</section>


<section class="home-recent-post">
    <div class="row">
        <div class="col-xs-12">
            <div class="home-recent-post-label">
                Latest Post
            </div>
            <div class="home-recent-post-seperator"></div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <div class="home-recent-post-label">
                {{#get "posts" limit="1" include="tags,author"}}
                    {{#foreach posts}}

                        {{!-- The tag below includes the markup for each post - partials/post-card.hbs --}}
                        {{> "post-card"}}

                    {{/foreach}}
                {{/get}}
            </div>
        </div>
    </div>
    {{!-- Email subscribe form at the bottom of the page --}}
    {{#if @labs.subscribers}}
        <section class="subscribe-form">
            <h3 class="subscribe-form-title">Subscribe to {{@blog.title}}</h3>
            <p>Get the latest posts delivered right to your inbox</p>
            {{subscribe_form placeholder="youremail@example.com"}}
        </section>
    {{/if}}
</section>
